#include "print.h"
#include "swag.h"
#include "inputProc.h"

void parse_args( char * line , char * * args){
    int i = 0;
    while( line ) {
        args[i] = strsep( &line, " " );
        i++;
    } 
}

void setup_n_receive(char * * buff, char * cwd, char * inlin){
    getcwd(cwd, 256);
    printf("\n%s>> ", cwd);
    fgets(inlin, 256, stdin);
    inlin[strlen(inlin) - 1] = 0;
    parse_args(inlin, buff);
}
